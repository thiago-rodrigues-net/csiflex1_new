@page "/users/create"
@using CSIFlex.Application.DTOs
@using CSIFlex.Domain.Entities.Authentication
@using CSIFlex.Domain.Interfaces.Services
@using Microsoft.AspNetCore.Components
@using Microsoft.Extensions.Logging
@inject IUserService UserService
@inject NavigationManager Navigation
@inject ILogger<UserCreate> Logger

<PageTitle>Novo Usuário - CSIFLEX</PageTitle>

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="card shadow border-0">
                <div class="card-header bg-success text-white py-3">
                    <h4 class="mb-0"><i class="bi bi-person-plus-fill me-2"></i>Cadastrar Novo Usuário</h4>
                </div>
                <div class="card-body p-4">
                    @if (!string.IsNullOrEmpty(errorMessage))
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <i class="bi bi-exclamation-octagon-fill me-2"></i>@errorMessage
                            <button type="button" class="btn-close" @onclick="() => errorMessage = null"></button>
                        </div>
                    }

                    <EditForm Model="@userModel" OnValidSubmit="HandleSubmit">
                        <DataAnnotationsValidator />
                        
                        <div class="row g-3">
                            <h5 class="border-bottom pb-2 mt-4 text-muted">Informações de Acesso</h5>
                            
                            <div class="col-md-6">
                                <label class="form-label fw-bold">Username *</label>
                                <InputText class="form-control" @bind-Value="userModel.UserName" placeholder="ex: jdoe" />
                                <ValidationMessage For="@(() => userModel.UserName)" class="text-danger small" />
                            </div>
                            
                            <div class="col-md-6">
                                <label class="form-label fw-bold">Tipo de Usuário *</label>
                                <InputSelect class="form-select" @bind-Value="userModel.UserType">
                                    <option value="user">Usuário Padrão</option>
                                    <option value="admin">Administrador</option>
                                    <option value="programer">Programador</option>
                                </InputSelect>
                                <ValidationMessage For="@(() => userModel.UserType)" class="text-danger small" />
                            </div>

                            <div class="col-md-6">
                                <label class="form-label fw-bold">Senha *</label>
                                <InputText type="password" class="form-control" @bind-Value="userModel.Password" />
                                <ValidationMessage For="@(() => userModel.Password)" class="text-danger small" />
                            </div>

                            <div class="col-md-6">
                                <label class="form-label fw-bold">Confirmar Senha *</label>
                                <InputText type="password" class="form-control" @bind-Value="userModel.ConfirmPassword" />
                                <ValidationMessage For="@(() => userModel.ConfirmPassword)" class="text-danger small" />
                            </div>

                            <h5 class="border-bottom pb-2 mt-4 text-muted">Informações Pessoais</h5>

                            <div class="col-md-6">
                                <label class="form-label fw-bold">Nome *</label>
                                <InputText class="form-control" @bind-Value="userModel.FirstName" />
                                <ValidationMessage For="@(() => userModel.FirstName)" class="text-danger small" />
                            </div>

                            <div class="col-md-6">
                                <label class="form-label fw-bold">Sobrenome *</label>
                                <InputText class="form-control" @bind-Value="userModel.LastName" />
                                <ValidationMessage For="@(() => userModel.LastName)" class="text-danger small" />
                            </div>

                            <div class="col-md-6">
                                <label class="form-label fw-bold">E-mail *</label>
                                <InputText class="form-control" @bind-Value="userModel.Email" />
                                <ValidationMessage For="@(() => userModel.Email)" class="text-danger small" />
                            </div>

                            <div class="col-md-6">
                                <label class="form-label fw-bold">Nome de Exibição</label>
                                <InputText class="form-control" @bind-Value="userModel.DisplayName" placeholder="Como o nome aparecerá no sistema" />
                            </div>

                            <h5 class="border-bottom pb-2 mt-4 text-muted">Informações Profissionais</h5>

                            <div class="col-md-4">
                                <label class="form-label fw-bold">Departamento</label>
                                <InputText class="form-control" @bind-Value="userModel.Dept" />
                            </div>

                            <div class="col-md-4">
                                <label class="form-label fw-bold">Cargo</label>
                                <InputText class="form-control" @bind-Value="userModel.Title" />
                            </div>

                            <div class="col-md-4">
                                <label class="form-label fw-bold">Ramal</label>
                                <InputText class="form-control" @bind-Value="userModel.PhoneExt" />
                            </div>

                            <div class="col-12">
                                <label class="form-label fw-bold">Máquinas Associadas</label>
                                <InputTextArea class="form-control" @bind-Value="userModel.Machines" rows="2" placeholder="IDs das máquinas separados por vírgula" />
                            </div>

                            <h5 class="border-bottom pb-2 mt-4 text-muted">Permissões Especiais</h5>

                            <div class="col-md-6">
                                <div class="form-check form-switch">
                                    <InputCheckbox class="form-check-input" @bind-Value="userModel.EditTimeline" id="swTimeline" />
                                    <label class="form-check-label" for="swTimeline">Pode editar Timeline</label>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-check form-switch">
                                    <InputCheckbox class="form-check-input" @bind-Value="userModel.EditPartNumber" id="swPart" />
                                    <label class="form-check-label" for="swPart">Pode editar Part Number</label>
                                </div>
                            </div>
                        </div>

                        <div class="mt-5 pt-3 border-top text-end">
                            <button type="button" class="btn btn-outline-secondary me-2" @onclick='() => Navigation.NavigateTo("users")'>
                                Cancelar
                            </button>
                            <button type="submit" class="btn btn-success px-4" disabled="@isSubmitting">
                                @if (isSubmitting)
                                {
                                    <span class="spinner-border spinner-border-sm me-2" role="status" aria-hidden="true"></span>
                                    <span>Salvando...</span>
                                }
                                else
                                {
                                    <i class="bi bi-save me-2"></i><span>Cadastrar Usuário</span>
                                }
                            </button>
                        </div>
                    </EditForm>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    private CreateUserDto userModel = new() { UserType = "user" };
    private string? errorMessage;
    private bool isSubmitting = false;

    private async Task HandleSubmit()
    {
        try
        {
            isSubmitting = true;
            errorMessage = null;

            if (await UserService.UserNameExistsAsync(userModel.UserName))
            {
                errorMessage = $"O username '{userModel.UserName}' já está em uso.";
                return;
            }

            if (await UserService.EmailExistsAsync(userModel.Email))
            {
                errorMessage = $"O e-mail '{userModel.Email}' já está em uso.";
                return;
            }

            var newUser = new User
            {
                UserName = userModel.UserName,
                FirstName = userModel.FirstName,
                LastName = userModel.LastName,
                DisplayName = userModel.DisplayName ?? "",
                Email = userModel.Email,
                UserType = userModel.UserType,
                Dept = userModel.Dept ?? "",
                Title = userModel.Title ?? "",
                PhoneExt = userModel.PhoneExt ?? "",
                Machines = userModel.Machines ?? "",
                EditTimeline = userModel.EditTimeline,
                EditPartNumber = userModel.EditPartNumber
            };

            var result = await UserService.CreateUserAsync(newUser, userModel.Password);
            if (result != null)
            {
                Navigation.NavigateTo("users");
            }
            else
            {
                errorMessage = "Erro ao criar usuário. Verifique os logs.";
            }
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Erro ao criar usuário");
            errorMessage = $"Erro interno: {ex.Message}";
        }
        finally
        {
            isSubmitting = false;
        }
    }
}

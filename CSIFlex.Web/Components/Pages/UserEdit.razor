@page "/users/edit/{Id:int}"
@using CSIFlex.Application.DTOs
@using CSIFlex.Domain.Entities.Authentication
@using CSIFlex.Domain.Interfaces.Services
@using Microsoft.AspNetCore.Components
@using Microsoft.Extensions.Logging
@inject IUserService UserService
@inject NavigationManager Navigation
@inject ILogger<UserEdit> Logger

<PageTitle>Editar Usuário - CSIFLEX</PageTitle>

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="card shadow border-0">
                <div class="card-header bg-primary text-white py-3 d-flex justify-content-between align-items-center">
                    <h4 class="mb-0"><i class="bi bi-pencil-square me-2"></i>Editar Usuário: @userName</h4>
                    <button class="btn btn-light btn-sm" @onclick="() => showPasswordModal = true">
                        <i class="bi bi-key-fill me-1"></i>Alterar Senha
                    </button>
                </div>
                <div class="card-body p-4">
                    @if (isLoading)
                    {
                        <div class="text-center py-5">
                            <div class="spinner-border text-primary" role="status">
                                <span class="visually-hidden">Carregando...</span>
                            </div>
                        </div>
                    }
                    else
                    {
                        @if (!string.IsNullOrEmpty(errorMessage))
                        {
                            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                                <i class="bi bi-exclamation-octagon-fill me-2"></i>@errorMessage
                                <button type="button" class="btn-close" @onclick="() => errorMessage = null"></button>
                            </div>
                        }

                        @if (!string.IsNullOrEmpty(successMessage))
                        {
                            <div class="alert alert-success alert-dismissible fade show" role="alert">
                                <i class="bi bi-check-circle-fill me-2"></i>@successMessage
                                <button type="button" class="btn-close" @onclick="() => successMessage = null"></button>
                            </div>
                        }

                        <EditForm Model="@userModel" OnValidSubmit="HandleSubmit">
                            <DataAnnotationsValidator />
                            
                            <div class="row g-3">
                                <h5 class="border-bottom pb-2 mt-4 text-muted">Informações de Acesso</h5>
                                
                                <div class="col-md-6">
                                    <label class="form-label fw-bold">Username</label>
                                    <input type="text" class="form-control bg-light" value="@userName" readonly />
                                    <div class="form-text">Username não pode ser alterado.</div>
                                </div>
                                
                                <div class="col-md-6">
                                    <label class="form-label fw-bold">Tipo de Usuário *</label>
                                    <InputSelect class="form-select" @bind-Value="userModel.UserType">
                                        <option value="user">Usuário Padrão</option>
                                        <option value="admin">Administrador</option>
                                        <option value="programer">Programador</option>
                                    </InputSelect>
                                    <ValidationMessage For="@(() => userModel.UserType)" class="text-danger small" />
                                </div>

                                <h5 class="border-bottom pb-2 mt-4 text-muted">Informações Pessoais</h5>

                                <div class="col-md-6">
                                    <label class="form-label fw-bold">Nome *</label>
                                    <InputText class="form-control" @bind-Value="userModel.FirstName" />
                                    <ValidationMessage For="@(() => userModel.FirstName)" class="text-danger small" />
                                </div>

                                <div class="col-md-6">
                                    <label class="form-label fw-bold">Sobrenome *</label>
                                    <InputText class="form-control" @bind-Value="userModel.LastName" />
                                    <ValidationMessage For="@(() => userModel.LastName)" class="text-danger small" />
                                </div>

                                <div class="col-md-6">
                                    <label class="form-label fw-bold">E-mail *</label>
                                    <InputText class="form-control" @bind-Value="userModel.Email" />
                                    <ValidationMessage For="@(() => userModel.Email)" class="text-danger small" />
                                </div>

                                <div class="col-md-6">
                                    <label class="form-label fw-bold">Nome de Exibição</label>
                                    <InputText class="form-control" @bind-Value="userModel.DisplayName" />
                                </div>

                                <h5 class="border-bottom pb-2 mt-4 text-muted">Informações Profissionais</h5>

                                <div class="col-md-4">
                                    <label class="form-label fw-bold">Departamento</label>
                                    <InputText class="form-control" @bind-Value="userModel.Dept" />
                                </div>

                                <div class="col-md-4">
                                    <label class="form-label fw-bold">Cargo</label>
                                    <InputText class="form-control" @bind-Value="userModel.Title" />
                                </div>

                                <div class="col-md-4">
                                    <label class="form-label fw-bold">Ramal</label>
                                    <InputText class="form-control" @bind-Value="userModel.PhoneExt" />
                                </div>

                                <div class="col-12">
                                    <label class="form-label fw-bold">Máquinas Associadas</label>
                                    <InputTextArea class="form-control" @bind-Value="userModel.Machines" rows="2" />
                                </div>

                                <h5 class="border-bottom pb-2 mt-4 text-muted">Permissões Especiais</h5>

                                <div class="col-md-6">
                                    <div class="form-check form-switch">
                                        <InputCheckbox class="form-check-input" @bind-Value="userModel.EditTimeline" id="swTimeline" />
                                        <label class="form-check-label" for="swTimeline">Pode editar Timeline</label>
                                    </div>
                                </div>

                                <div class="col-md-6">
                                    <div class="form-check form-switch">
                                        <InputCheckbox class="form-check-input" @bind-Value="userModel.EditPartNumber" id="swPart" />
                                        <label class="form-check-label" for="swPart">Pode editar Part Number</label>
                                    </div>
                                </div>
                            </div>

                            <div class="mt-5 pt-3 border-top text-end">
                                <button type="button" class="btn btn-outline-secondary me-2" @onclick='() => Navigation.NavigateTo("users")'>
                                    Voltar
                                </button>
                                <button type="submit" class="btn btn-primary px-4" disabled="@isSubmitting">
                                    @if (isSubmitting)
                                    {
                                        <span class="spinner-border spinner-border-sm me-2" role="status" aria-hidden="true"></span>
                                        <span>Salvando...</span>
                                    }
                                    else
                                    {
                                        <i class="bi bi-save me-2"></i><span>Salvar Alterações</span>
                                    }
                                </button>
                            </div>
                        </EditForm>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@if (showPasswordModal)
{
    <div class="modal fade show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5);">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content border-0 shadow">
                <div class="modal-header bg-primary text-white">
                    <h5 class="modal-title"><i class="bi bi-key-fill me-2"></i>Alterar Senha</h5>
                    <button type="button" class="btn-close btn-close-white" @onclick="() => showPasswordModal = false"></button>
                </div>
                <EditForm Model="@passwordModel" OnValidSubmit="HandleChangePassword">
                    <div class="modal-body p-4">
                        <DataAnnotationsValidator />
                        
                        <div class="mb-3">
                            <label class="form-label fw-bold">Nova Senha</label>
                            <InputText type="password" class="form-control" @bind-Value="passwordModel.NewPassword" />
                            <ValidationMessage For="@(() => passwordModel.NewPassword)" class="text-danger small" />
                        </div>
                        
                        <div class="mb-0">
                            <label class="form-label fw-bold">Confirmar Nova Senha</label>
                            <InputText type="password" class="form-control" @bind-Value="passwordModel.ConfirmNewPassword" />
                            <ValidationMessage For="@(() => passwordModel.ConfirmNewPassword)" class="text-danger small" />
                        </div>
                    </div>
                    <div class="modal-footer bg-light">
                        <button type="button" class="btn btn-secondary" @onclick="() => showPasswordModal = false">Cancelar</button>
                        <button type="submit" class="btn btn-primary" disabled="@isSubmitting">Alterar Senha</button>
                    </div>
                </EditForm>
            </div>
        </div>
    </div>
}

@code {
    [Parameter] public int Id { get; set; }
    
    private UpdateUserDto userModel = new();
    private ChangePasswordDto passwordModel = new();
    private string userName = "";
    private string? errorMessage;
    private string? successMessage;
    private bool isLoading = true;
    private bool isSubmitting = false;
    private bool showPasswordModal = false;
    private User? originalUser;

    protected override async Task OnInitializedAsync()
    {
        await LoadUser();
    }

    private async Task LoadUser()
    {
        try
        {
            isLoading = true;
            originalUser = await UserService.GetUserByIdAsync(Id);
            
            if (originalUser == null)
            {
                Navigation.NavigateTo("users");
                return;
            }

            userName = originalUser.UserName;
            userModel = new UpdateUserDto
            {
                Id = originalUser.Id,
                FirstName = originalUser.FirstName,
                LastName = originalUser.LastName,
                DisplayName = originalUser.DisplayName,
                Email = originalUser.Email,
                UserType = originalUser.UserType,
                Dept = originalUser.Dept,
                Title = originalUser.Title,
                PhoneExt = originalUser.PhoneExt,
                Machines = originalUser.Machines,
                EditTimeline = originalUser.EditTimeline,
                EditPartNumber = originalUser.EditPartNumber
            };
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Erro ao carregar usuário {UserId}", Id);
            errorMessage = "Erro ao carregar dados do usuário.";
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task HandleSubmit()
    {
        if (originalUser == null) return;

        try
        {
            isSubmitting = true;
            errorMessage = null;
            successMessage = null;

            if (await UserService.EmailExistsAsync(userModel.Email, Id))
            {
                errorMessage = $"O e-mail '{userModel.Email}' já está em uso por outro usuário.";
                return;
            }

            originalUser.FirstName = userModel.FirstName;
            originalUser.LastName = userModel.LastName;
            originalUser.DisplayName = userModel.DisplayName ?? "";
            originalUser.Email = userModel.Email;
            originalUser.UserType = userModel.UserType;
            originalUser.Dept = userModel.Dept ?? "";
            originalUser.Title = userModel.Title ?? "";
            originalUser.PhoneExt = userModel.PhoneExt ?? "";
            originalUser.Machines = userModel.Machines ?? "";
            originalUser.EditTimeline = userModel.EditTimeline;
            originalUser.EditPartNumber = userModel.EditPartNumber;

            var result = await UserService.UpdateUserAsync(originalUser);
            if (result != null)
            {
                successMessage = "Usuário atualizado com sucesso!";
                await LoadUser();
            }
            else
            {
                errorMessage = "Erro ao atualizar usuário.";
            }
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Erro ao atualizar usuário {UserId}", Id);
            errorMessage = $"Erro interno: {ex.Message}";
        }
        finally
        {
            isSubmitting = false;
        }
    }

    private async Task HandleChangePassword()
    {
        try
        {
            isSubmitting = true;
            errorMessage = null;
            successMessage = null;

            var success = await UserService.ResetPasswordAsync(Id, passwordModel.NewPassword);
            if (success)
            {
                showPasswordModal = false;
                successMessage = "Senha alterada com sucesso!";
                passwordModel = new();
            }
            else
            {
                errorMessage = "Erro ao alterar senha.";
            }
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Erro ao alterar senha do usuário {UserId}", Id);
            errorMessage = $"Erro ao alterar senha: {ex.Message}";
        }
        finally
        {
            isSubmitting = false;
        }
    }
}

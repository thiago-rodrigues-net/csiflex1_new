@page "/users"
@using CSIFlex.Application.DTOs
@using CSIFlex.Domain.Interfaces.Services
@inject IUserService UserService
@inject NavigationManager Navigation
@inject ILogger<Users> Logger

<PageTitle>Gerenciamento de Usuários - CSIFLEX</PageTitle>

<div class="container-fluid mt-4">
    <div class="row mb-4">
        <div class="col">
            <h2><i class="bi bi-people-fill me-2"></i>Gerenciamento de Usuários</h2>
            <p class="text-muted">Gerencie os usuários do sistema CSIFLEX</p>
        </div>
        <div class="col-auto">
            <button class="btn btn-primary" @onclick="NavigateToCreate">
                <i class="bi bi-person-plus-fill me-2"></i>Novo Usuário
            </button>
        </div>
    </div>

    @if (loading)
    {
        <div class="text-center py-5">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Carregando...</span>
            </div>
            <p class="mt-3 text-muted">Carregando usuários...</p>
        </div>
    }
    else if (!string.IsNullOrEmpty(errorMessage))
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle-fill me-2"></i>
            <strong>Erro!</strong> @errorMessage
            <button type="button" class="btn-close" @onclick="() => errorMessage = string.Empty"></button>
        </div>
    }
    else
    {
        <div class="card shadow-sm">
            <div class="card-body">
                <div class="row mb-3">
                    <div class="col-md-6">
                        <div class="input-group">
                            <span class="input-group-text"><i class="bi bi-search"></i></span>
                            <input type="text" class="form-control" placeholder="Buscar usuários..." 
                                   @bind="searchTerm" @bind:event="oninput" @onkeyup="OnSearchKeyUp" />
                            @if (!string.IsNullOrEmpty(searchTerm))
                            {
                                <button class="btn btn-outline-secondary" @onclick="ClearSearch">
                                    <i class="bi bi-x-lg"></i>
                                </button>
                            }
                        </div>
                    </div>
                    <div class="col-md-3">
                        <select class="form-select" @bind="filterUserType" @bind:after="FilterUsers">
                            <option value="">Todos os tipos</option>
                            <option value="admin">Administrador</option>
                            <option value="user">Usuário</option>
                            <option value="programer">Programador</option>
                        </select>
                    </div>
                    <div class="col-md-3 text-end">
                        <span class="badge bg-secondary fs-6">
                            Total: @filteredUsers.Count() usuário(s)
                        </span>
                    </div>
                </div>

                @if (!filteredUsers.Any())
                {
                    <div class="alert alert-info text-center">
                        <i class="bi bi-info-circle me-2"></i>
                        Nenhum usuário encontrado.
                    </div>
                }
                else
                {
                    <div class="table-responsive">
                        <table class="table table-hover align-middle">
                            <thead class="table-light">
                                <tr>
                                    <th>Nome de Usuário</th>
                                    <th>Nome Completo</th>
                                    <th>E-mail</th>
                                    <th>Tipo</th>
                                    <th>Departamento</th>
                                    <th>Cargo</th>
                                    <th class="text-center">Ações</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var user in filteredUsers)
                                {
                                    <tr>
                                        <td>
                                            <strong>@user.UserName</strong>
                                        </td>
                                        <td>@user.DisplayName</td>
                                        <td>
                                            <a href="mailto:@user.Email">@user.Email</a>
                                        </td>
                                        <td>
                                            <span class="badge @GetUserTypeBadgeClass(user.UserType)">
                                                @GetUserTypeLabel(user.UserType)
                                            </span>
                                        </td>
                                        <td>@user.Dept</td>
                                        <td>@user.Title</td>
                                        <td class="text-center">
                                            <div class="btn-group btn-group-sm" role="group">
                                                <button class="btn btn-outline-primary" 
                                                        @onclick="() => NavigateToEdit(user.Id)"
                                                        title="Editar">
                                                    <i class="bi bi-pencil-fill"></i>
                                                </button>
                                                <button class="btn btn-outline-danger" 
                                                        @onclick="() => ConfirmDelete(user)"
                                                        title="Excluir">
                                                    <i class="bi bi-trash-fill"></i>
                                                </button>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
            </div>
        </div>
    }
</div>

@if (showDeleteConfirmation)
{
    <div class="modal fade show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5);">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header bg-danger text-white">
                    <h5 class="modal-title">
                        <i class="bi bi-exclamation-triangle-fill me-2"></i>
                        Confirmar Exclusão
                    </h5>
                    <button type="button" class="btn-close btn-close-white" @onclick="CancelDelete"></button>
                </div>
                <div class="modal-body">
                    <p>Tem certeza que deseja excluir o usuário <strong>@userToDelete?.UserName</strong>?</p>
                    <p class="text-muted mb-0">Esta ação não pode ser desfeita.</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" @onclick="CancelDelete">Cancelar</button>
                    <button type="button" class="btn btn-danger" @onclick="DeleteUser" disabled="@deleting">
                        @if (deleting)
                        {
                            <span class="spinner-border spinner-border-sm me-2" role="status"></span>
                            <span>Excluindo...</span>
                        }
                        else
                        {
                            <i class="bi bi-trash-fill me-2"></i>
                            <span>Excluir</span>
                        }
                    </button>
                </div>
            </div>
        </div>
    </div>
}

@code {
    private List<UserDto> users = new();
    private IEnumerable<UserDto> filteredUsers = new List<UserDto>();
    private string searchTerm = string.Empty;
    private string filterUserType = string.Empty;
    private bool loading = true;
    private string errorMessage = string.Empty;
    private bool showDeleteConfirmation = false;
    private UserDto? userToDelete;
    private bool deleting = false;

    protected override async Task OnInitializedAsync()
    {
        await LoadUsers();
    }

    private async Task LoadUsers()
    {
        try
        {
            loading = true;
            errorMessage = string.Empty;
            Logger.LogInformation("Carregando lista de usuários");

            var result = await UserService.GetAllUsersAsync();
            users = result.Select(u => new UserDto
            {
                Id = u.Id,
                UserName = u.UserName,
                FirstName = u.FirstName,
                LastName = u.LastName,
                DisplayName = u.DisplayName,
                Email = u.Email,
                UserType = u.UserType,
                Dept = u.Dept,
                Title = u.Title,
                PhoneExt = u.PhoneExt,
                Machines = u.Machines,
                EditTimeline = u.EditTimeline,
                EditPartNumber = u.EditPartNumber
            }).ToList();

            filteredUsers = users;
            Logger.LogInformation("Carregados {Count} usuários", users.Count);
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Erro ao carregar usuários");
            errorMessage = "Erro ao carregar a lista de usuários. Por favor, tente novamente.";
        }
        finally
        {
            loading = false;
        }
    }

    private void OnSearchKeyUp()
    {
        FilterUsers();
    }

    private void FilterUsers()
    {
        var query = users.AsEnumerable();

        if (!string.IsNullOrWhiteSpace(searchTerm))
        {
            var search = searchTerm.ToLower();
            query = query.Where(u =>
                u.UserName.ToLower().Contains(search) ||
                u.FirstName.ToLower().Contains(search) ||
                u.LastName.ToLower().Contains(search) ||
                u.DisplayName.ToLower().Contains(search) ||
                u.Email.ToLower().Contains(search));
        }

        if (!string.IsNullOrWhiteSpace(filterUserType))
        {
            query = query.Where(u => u.UserType.Equals(filterUserType, StringComparison.OrdinalIgnoreCase));
        }

        filteredUsers = query.ToList();
    }

    private void ClearSearch()
    {
        searchTerm = string.Empty;
        FilterUsers();
    }

    private void NavigateToCreate()
    {
        Navigation.NavigateTo("/users/create");
    }

    private void NavigateToEdit(int userId)
    {
        Navigation.NavigateTo($"/users/edit/{userId}");
    }

    private void ConfirmDelete(UserDto user)
    {
        userToDelete = user;
        showDeleteConfirmation = true;
    }

    private void CancelDelete()
    {
        userToDelete = null;
        showDeleteConfirmation = false;
    }

    private async Task DeleteUser()
    {
        if (userToDelete == null) return;

        try
        {
            deleting = true;
            Logger.LogInformation("Excluindo usuário: {UserName}", userToDelete.UserName);

            var success = await UserService.DeleteUserAsync(userToDelete.Id);

            if (success)
            {
                Logger.LogInformation("Usuário excluído com sucesso: {UserName}", userToDelete.UserName);
                await LoadUsers();
                CancelDelete();
            }
            else
            {
                errorMessage = "Não foi possível excluir o usuário. Por favor, tente novamente.";
            }
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Erro ao excluir usuário: {UserName}", userToDelete.UserName);
            errorMessage = "Erro ao excluir o usuário. Por favor, tente novamente.";
        }
        finally
        {
            deleting = false;
        }
    }

    private string GetUserTypeBadgeClass(string userType)
    {
        return userType.ToLower() switch
        {
            "admin" => "bg-danger",
            "programer" => "bg-warning text-dark",
            "user" => "bg-primary",
            _ => "bg-secondary"
        };
    }

    private string GetUserTypeLabel(string userType)
    {
        return userType.ToLower() switch
        {
            "admin" => "Administrador",
            "programer" => "Programador",
            "user" => "Usuário",
            _ => userType
        };
    }
}
